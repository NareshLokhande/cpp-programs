#include <iostream>
using namespace std;

// int main(){
//     cout << "Hello world";
// }

struct Employee
{
    string Name;
    int EmpId;
    float salary;
    void GetData()
    {
        cout << "Enter Emp Name :  " << endl;
        cin >> Name;
        cout << "Enter Emp ID :  " << endl;
        cin >> EmpId;
        cout << "Enter Emp Salary :  " << endl;
        cin >> salary;
    }

    void ShowData()
    {
        cout << "Name :     " << Name << "  EmpID:    " << EmpId << "   Salary :   " << salary << endl;
    }
};

int main()
{
    Employee e1;
    e1.GetData();
    e1.ShowData();
    return 0;
}


